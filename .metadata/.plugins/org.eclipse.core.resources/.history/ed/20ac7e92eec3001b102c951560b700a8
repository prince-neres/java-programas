public class ContadorDePessoas {
	
//Atributos
int limitePessoas;
int qtdePresentes;
int totalPresentes;

//Métodos
ContadorDePessoas(int limitePessoas){
	limitePessoas = 100;
}

void registraEntrada(int quantidade){
	
	if(quantidade>=limitePessoas) {
		System.out.println("Erro. Número máximo de pessoas permitido!");
	} else {
	quantidade++;
	}
	
}

void registraSaida(int quantidade) {
	if(quantidade<=limitePessoas) {
		registraEtrada();
	}
	quantidade--;
}

void mostrarRelatorio(){
	
}


}
